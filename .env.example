# Environment Configuration for ClimateAI Assistant

# ======================
# API Configuration
# ======================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false
ENVIRONMENT=production

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://climateai:password@timescaledb:5432/climateai
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false

# ======================
# Redis Configuration
# ======================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=climateai123
REDIS_MAX_CONNECTIONS=50

# ======================
# AI/ML Configuration
# ======================
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7
MODEL_REGISTRY_PATH=/models
MLFLOW_TRACKING_URI=http://mlflow:5000

# ======================
# Edge Computing
# ======================
EDGE_GATEWAY_URL=http://edge:8001
MQTT_BROKER=mqtt://mqtt:1883
MQTT_USERNAME=climateai
MQTT_PASSWORD=climateai123
EDGE_INFERENCE_ENABLED=true

# ======================
# Security Configuration
# ======================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ======================
# Data Processing
# ======================
MAX_FORECAST_HOURS=48
DATA_RETENTION_DAYS=90
BATCH_SIZE=1000
PROCESSING_WORKERS=4

# ======================
# Monitoring & Logging
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=json
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true

# ======================
# Feature Flags
# ======================
ENABLE_WEATHER_FORECAST=true
ENABLE_AIR_QUALITY=true
ENABLE_ENERGY_OPTIMIZATION=true
ENABLE_HEALTH_ALERTS=true
ENABLE_EDGE_INFERENCE=true

# ======================
# External APIs
# ======================
WEATHER_API_KEY=your_weather_api_key
AIR_QUALITY_API_KEY=your_air_quality_api_key
ENERGY_API_KEY=your_energy_api_key

# ======================
# Performance Tuning
# ======================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=60

# ======================
# Email Notifications (Optional)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@climateai.com

# ======================
# Backup & Recovery
# ======================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups